{
  "mcpServers": {
    "audio-processor-gpu": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--user",
        "1000:1000",
        "--gpus",
        "all",
        "-v",
        "${PWD}/input:/app/input",
        "-v",
        "${PWD}/output:/app/output",
        "ghcr.io/pmacled/tool-audio-processor:latest"
      ],
      "description": "MCP server for audio layer manipulation with CUDA acceleration (requires NVIDIA GPU and nvidia-docker)"
    },
    "audio-processor-cpu": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--user",
        "1000:1000",
        "-v",
        "${PWD}/input:/app/input",
        "-v",
        "${PWD}/output:/app/output",
        "ghcr.io/pmacled/tool-audio-processor:latest"
      ],
      "description": "MCP server for audio layer manipulation (CPU-only)"
    }
  }
}
